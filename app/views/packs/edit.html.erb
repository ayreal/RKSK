<div class="center-align">
  <h1>Get ready for <%= @pack.location_name %>!</h1>
</div>
  <h3>Today's weather is <%=@pack.temp_f%> degrees and <%= @pack.weather_desc %>.</h3>
    <h4>Choose some items for your new starter pack:</h4>
<!-- @user_selections -->
<%= form_for @pack do |f| %>
  <div>
    <%= f.label :name, "Name Your Starter Pack"%> <br/>
    <%= f.text_field :name %>
  </div>

  <div>

    <ul>
      <%= f.collection_check_boxes :item_ids, @user_selections, :id, :title do |b|%>
        <li>  <%= b.check_box + b.label%></li>
      <% end %>
    </ul>

  </div>
<%=f.submit%>
<%end%>
