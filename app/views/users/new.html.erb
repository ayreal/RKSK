
<div class="center-align">
  <h1>Grab Your Pack, Let's Go!</h1>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= form_for :user, url: '/users' do |f| %>
            Name: <%= f.text_field :name, placeholder: "Enter Your Name" %> </br></br>
            Username: <%= f.text_field :username, placeholder: "Enter A Username" %> </br></br>

            Password: <%= f.password_field :password %></br></br>
            Re-Enter Your Password: <%= f.password_field :password_confirmation %></br></br>

          <br/>
          <br/>
            <a class="waves-effect waves-light btn-large"><%= f.submit "Sign Up" %></a>
          <% end %>
        </div>
        <img class="materialboxed" src="https://5ad7q3a4mi737b0ze2x0pml2-wpengine.netdna-ssl.com/wp-content/uploads/sites/4/2015/10/thingsorganizedneatly4.png">
        </div>

      </div>
    </div>
  </div>
</div>
